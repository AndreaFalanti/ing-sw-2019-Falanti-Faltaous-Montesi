      "name": "Basic mode",
      "behaviour": {
        "expr": "Do",
        "list": [
          {
            "expr": "InflictDamage",
            "amount": "1d2m",
            "to": {
              "expr": "SelectOneTarget",
              "from": {
                "expr": "All",
                "from": {
                  "expr": "Distance",
                  "amount": 1
                }
              }
            }
          },
          {
            "expr": "Move",
            "from": {
              "expr": "You"
            },
            "to": {
              "expr": "Pos",
              "who": {
                "expr": "LastSelected"
              }
            }
          }
        ]
      }
    },
    "rhs": {
