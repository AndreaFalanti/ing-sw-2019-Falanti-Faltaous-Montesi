                    "expr": "Line",
                    "direction": {
                      "expr": "Load",
                      "name": "punch_direction"
                    }
                  },
                  "rhs": {
                    "expr": "Distance",
                    "amount": 1
                  }
                }
              }
            }
          },
          {
            "name": "First punch",
            "priority": 2,
            "optional": true,
            "behaviour": {
              "expr": "InflictDamage",
              "amount": "2d",
              "to": {
                "expr": "SelectOneTarget",
                "from": {
                  "expr": "All",
                  "from": {
                    "expr": "Load",
                    "name": "first_jump_destination"
                  }
                }
              }
            }
          },
          {
            "name": "Second rocket jump",
            "priority": 3,
            "optional": true,
            "behaviour": {
              "expr": "PickEffect",
              "effects": [
                {
                  "name": "Second jump",
                  "priority": 0,
                  "behaviour": {
                    "expr": "Move",
                    "from": {
                      "expr": "You"
                    },
                    "to": {
                      "expr": "SelectOnePosition",
                      "store": "second_jump_destination",
                      "from": {
                        "expr": "Intersect",
                        "lhs": {
                          "expr": "Line",
                          "direction": {
                            "expr": "Load",
                            "name": "punch_direction"
                          }
                        },
                        "rhs": {
                          "expr": "Distance",
                          "amount": 1
                        }
                      }
                    }
                  }
                },
                {
                  "name": "Second punch",
                  "priority": 1,
                  "optional": true,
                  "behaviour": {
                    "expr": "InflictDamage",
                    "amount": "2d",
                    "to": {
                      "expr": "SelectOneTarget",
                      "from": {
                        "expr": "All",
                        "from": {
                          "expr": "Load",
                          "name": "second_jump_destination"
                        }
                      }
                    }
                  }
                }
              ]
            }
          }
        ]
      } 
    }
